<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <!--                    <solid android:color="@android:color/darker_gray" />-->
                    <corners android:radius="19dp" />
                </shape>
            </item>

            <item >
                <shape android:shape="rectangle">
                    <stroke android:color="#393942" android:width="4dp" />
                    <padding android:bottom="5dp" />
                    <gradient android:type="radial" android:gradientRadius="300dp" android:startColor="#EC5109" android:endColor="#EE2E0E" />
                    <!--                <gradient android:angle="270" android:endColor="#CE1B22" android:centerColor="#CE1B22" android:startColor="#BCBEBF" />-->
                    <corners android:topLeftRadius="160dp"
                        android:topRightRadius="160dp"
                        android:bottomRightRadius="160dp"
                        android:bottomLeftRadius="160dp"/>
                    <padding android:bottom="10dp" android:left="10dp" android:right="5dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>